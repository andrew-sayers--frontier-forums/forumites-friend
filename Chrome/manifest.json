{
	"name": "Forumite's Friend",
	"author": "Andrew Sayers",
	"version": "0.91",
	"manifest_version": 2,
	"description": "Improvements for the Frontier Forums",
	"update_url": "http://pileofstuff.org/forumites-friend/forumites-friend.crx",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["*://forums.frontier.co.uk/*"],
			"js": ["BabelExt.js", "extension.js"], // add others here if you like, i.e. jquery...
			"run_at": "document_start"
		}
	],
	"icons": {},
	"permissions": [
		"contextMenus",
		"tabs",
		"history",
		"notifications"
	]
}
